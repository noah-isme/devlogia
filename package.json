{
  "name": "devlogia",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:full": "(pnpm db:up || echo \"Skipping pnpm db:up (already running or unavailable)\") && pnpm prisma migrate deploy && pnpm prisma db seed && pnpm exec playwright install --with-deps && pnpm test:e2e",
    "e2e": "pnpm test:e2e",
    "format": "prettier --check \"**/*.{ts,tsx,md,mdx,json,yml,yaml}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,md,mdx,json,yml,yaml}\"",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d && pnpm prisma migrate deploy && pnpm prisma db seed",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.18.0",
    "@radix-ui/react-slot": "1.2.3",
    "@tailwindcss/typography": "0.5.19",
    "bcrypt": "6.0.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "next": "16.0.0",
    "next-auth": "4.24.11",
    "next-mdx-remote": "5.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "remark": "15.0.1",
    "remark-gfm": "4.0.1",
    "tailwind-merge": "3.3.1",
    "uploadthing": "7.7.4",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "@tailwindcss/postcss": "4.1.16",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/bcrypt": "6.0.0",
    "@types/node": "20.19.23",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.0.4",
    "eslint": "9.38.0",
    "eslint-config-next": "16.0.0",
    "jsdom": "27.0.1",
    "msw": "2.11.6",
    "playwright": "1.56.1",
    "prettier": "3.6.2",
    "prisma": "6.18.0",
    "tailwindcss": "4.1.16",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "4.0.1"
  }
}